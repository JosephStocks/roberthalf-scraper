# Robert Half Credentials
ROBERTHALF_USERNAME=your.email@example.com
ROBERTHALF_PASSWORD=your_password_here

# Proxy Toggle
USE_PROXY=false            # Set to true/false to enable/disable proxy

# IProyal Proxy Configuration
IPROYAL_PROXY_SERVER=geo.iproyal.com:12321
IPROYAL_PROXY_AUTH=username:password_country-us_streaming-1

# Proxy Configuration
PROXY_SERVER=${IPROYAL_PROXY_SERVER}
PROXY_AUTH=${IPROYAL_PROXY_AUTH}
PROXY_BYPASS=*.iproyal.com

# Session Management
SAVE_SESSION_COOKIES=true  # Enable session persistence
SESSION_COOKIES_FILE=session_cookies.json
SESSION_MAX_AGE_HOURS=12  # Force refresh after this many hours

# Request Configuration
REQUEST_DELAY=2  # Delay between requests in seconds
PAGE_DELAY_MIN=5  # Minimum delay between page requests
PAGE_DELAY_MAX=15  # Maximum delay between page requests
MAX_RETRIES=3  # Maximum retry attempts with exponential backoff

# Browser Configuration
HEADLESS=true  # Run browser in headless mode
VIEWPORT_WIDTH=1920  # Browser viewport width
VIEWPORT_HEIGHT=1080  # Browser viewport height
ROTATE_USER_AGENT=false  # Use random user agents
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/134.0.0.0 Safari/537.36

# Scraping Parameters
FILTER_STATE=TX  # Filter jobs by state
JOB_POST_PERIOD=PAST_24_HOURS  # PAST_24_HOURS, PAST_3_DAYS, PAST_WEEK, etc.